<div class="d-flex align-items-center flex-column">
<h1 class= "mb-5">NEW GAME</h1>
<div>
  <% @letters.each do |letter| %>
    <span class="border border-primary p-3 "><%= letter %></span>
  <% end %>
</div>

<form action="/score" method="post" class="mt-5 d-flex" data-turbo="false">
  <input type="text" name="word" placeholder="Try here!" class="form-control">
  <input type="submit" class="btn btn-danger">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
</form>
